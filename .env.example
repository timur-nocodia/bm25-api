# Docker Configuration
CONTAINER_NAME=bm25-api
HOST_PORT=8080
CONTAINER_PORT=8080
CACHE_PATH=/cache

# Application Configuration
APP_HOST=0.0.0.0
WORKERS=1
LOG_LEVEL=info
BATCH_SIZE_DEFAULT=256
THREADS_DEFAULT=1

# Performance Settings
OMP_NUM_THREADS=1
OPENBLAS_NUM_THREADS=1
MKL_NUM_THREADS=1

# Resource Limits
CPU_LIMIT=1.5
MEMORY_LIMIT=600M
CPU_RESERVATION=0.5
MEMORY_RESERVATION=256M

# Restart Policy
RESTART_POLICY=always
RESTART_CONDITION=any
RESTART_DELAY=5s
RESTART_MAX_ATTEMPTS=0
RESTART_WINDOW=120s

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=10s