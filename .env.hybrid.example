# Docker Configuration
CONTAINER_NAME=hybrid-api
HOST_PORT=8080
CONTAINER_PORT=8080
CACHE_PATH=/cache

# Mode Configuration
MODE=hybrid  # Options: sparse, hybrid
DENSE_MODEL=BAAI/bge-small-en-v1.5  # Options: see /dense/models endpoint

# Popular Dense Model Options:
# - BAAI/bge-small-en-v1.5 (384 dims, 0.13 GB) - Fast & accurate
# - sentence-transformers/all-MiniLM-L6-v2 (384 dims, 0.09 GB) - Very fast
# - BAAI/bge-base-en-v1.5 (768 dims, 0.44 GB) - Higher accuracy
# - intfloat/multilingual-e5-large (1024 dims, 2.24 GB) - Multilingual

# Application Configuration
APP_HOST=0.0.0.0
WORKERS=1
LOG_LEVEL=info
BATCH_SIZE_DEFAULT=256
THREADS_DEFAULT=1

# Performance Settings
OMP_NUM_THREADS=1
OPENBLAS_NUM_THREADS=1
MKL_NUM_THREADS=1

# Resource Limits (increased for dual models)
CPU_LIMIT=2.0
MEMORY_LIMIT=1200M
CPU_RESERVATION=1.0
MEMORY_RESERVATION=512M

# Restart Policy
RESTART_POLICY=always
RESTART_CONDITION=any
RESTART_DELAY=5s
RESTART_MAX_ATTEMPTS=0
RESTART_WINDOW=120s

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=30s

# Security Settings
API_KEY=your_secret_api_key_here